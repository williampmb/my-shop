doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title #{docTitle}
        link(rel="stylesheet", href="/css/main.css")
        link(rel="stylesheet", href="/css/products.css")
    body
        header.main-header  
            nav.main-header__nav
                ul.main-header__nav
                    li.main-header__item
                        a.active(href="/") Shop
                    li.main-header__item
                        a(href="/admin/add-product") Add Product
        main
            .grid 
                each product in products
                    article.card.product-item
                        header.card_header
                            h1.product__tile #{product.title} 
                        .card__image
                            img(src="https://cdn.pixabay.com/photo/2015/11/19/21/10/glasses-1052010_960_720.jpg", alt="book1")
                        .card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book to discover the best new things from the middle age and the modern wars
                        .card__actions
                            button.btn Add to Cart

